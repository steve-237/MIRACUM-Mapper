<div class="custom-modal">
    <div class="custom-modal-content">
        <h5><span>Edit Project</span></h5>
        <form id="editForm" asp-action="Edit" asp-route-id="@Model.Id" method="post">
            <input type="hidden" id="Id" value="Id" />
            <div class="form-row">
                <div class="col-md-9">
                    <div class="form-group">
                        <label asp-for="Name">Name:</label>
                        <input asp-for="Name" type="text" class="form-control" autocomplete="on">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Version">Version:</label>
                        <input asp-for="Version" type="text" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description :</label>
                <input asp-for="Description" class="form-control" type="text" placeholder="Enter project description">
            </div>

