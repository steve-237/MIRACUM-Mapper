            <div class="bg-light">
                <div class="accordion" id="advancedSettingsAccordion">
                    <div class="card">
                        <div class="card-header" id="advancedSettingsHeader">
                            <h6 class="mb-0">
                                <a data-toggle="collapse" data-target="#advancedSettingsCollapse" aria-expanded="true" aria-controls="advancedSettingsCollapse">
                                    Advanced Settings
                                </a>
                            </h6>
                        </div>

                        <div id="advancedSettingsCollapse" class="collapse" aria-labelledby="advancedSettingsHeader" data-parent="#advancedSettingsAccordion">
                            <div class="card-body bg-light">
                                @for (int i = 0; i < 2; i++)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="displayCheckbox@(i)" name="DisplayCheckbox@(i)"
                                            @(i == 0 && Model.DisplayMappingEquivalence ? "checked" : "")
                                            @(i == 1 && Model.DisplayStatus ? "checked" : "") 
                                        >
                                        <label class="form-check-label" for="displayCheckbox@(i)">
                                            @if (i == 0)
                                            {
                                                <span>Display Mapping Equivalence</span>
                                            }
                                            else if (i == 1)
                                            {
                                                <span>Display Status</span>
                                            }
